<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/greenMonchisDefault" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:textSize="8pt" android:textStyle="bold" android:textColor="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="2dp" android:text="Total a Cobrar"/>
            <TextView android:textSize="15pt" android:textStyle="bold" android:textColor="@color/white" android:id="@+id/tvTotal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="2dp" android:text="Gs. 0"/>
            <TextView android:textSize="7pt" android:textStyle="bold" android:textColor="@color/white" android:id="@+id/tvFecha" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="3dp" android:text="Fecha: "/>
            <TextView android:textSize="8pt" android:textStyle="bold" android:textColor="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="3dp" android:text="Balances"/>
            <LinearLayout android:gravity="center" android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="2dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/black"
                    app:cardCornerRadius="10dp">
                    <LinearLayout android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="5dp">
                            <ImageView android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@mipmap/intereses_foreground"/>
                            <TextView android:textSize="9pt"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:text="Intereses"/>
                        </LinearLayout>
                        <TextView android:textSize="10pt"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:id="@+id/tvInteres"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Gs. 0"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    app:cardBackgroundColor="@color/black"
                    app:cardCornerRadius="10dp">
                    <LinearLayout android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="5dp">
                            <ImageView android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@mipmap/capitales_foreground"/>
                            <TextView android:textSize="9pt"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:text="Capitales"/>
                        </LinearLayout>
                        <TextView android:textSize="10pt"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:id="@+id/tvCapital"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Gs. 0"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <TextView android:textSize="8pt"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:text="Valores"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="5dp">
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="50">
                        <ImageView android:id="@+id/imgEfectivo"
                            android:layout_width="66dp"
                            android:layout_height="56dp"
                            android:layout_margin="2dp"
                            app:srcCompat="@mipmap/efectivo_foreground"/>
                        <TextView android:textSize="8pt"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:id="@+id/tvEfectivoLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:text="Efectivo:"/>
                        <TextView android:textSize="9pt"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:id="@+id/cantEfectivo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="0"/>
                    </LinearLayout>
                    <LinearLayout android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="20">
                        <Button android:textSize="4pt"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:id="@+id/btnDetalleEfectivo"
                            android:background="@drawable/custom_button_rounded_green"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Consultar"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="5dp">
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="50">
                        <ImageView android:id="@+id/imgDebito"
                            android:layout_width="66dp"
                            android:layout_height="56dp"
                            android:layout_margin="2dp"
                            app:srcCompat="@mipmap/debito_foreground"/>
                        <TextView android:textSize="8pt"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:id="@+id/tvDebitoLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:text="Tarjeta de Debito:"/>
                        <TextView android:textSize="9pt"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:id="@+id/cantDebito"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="0"/>
                    </LinearLayout>
                    <LinearLayout android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="20">
                        <Button android:textSize="4pt"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:id="@+id/btnDetalleDebito"
                            android:background="@drawable/custom_button_rounded_green"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Consultar"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="5dp">
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="50">
                        <ImageView android:id="@+id/imgCredito"
                            android:layout_width="66dp"
                            android:layout_height="56dp"
                            android:layout_margin="2dp"
                            app:srcCompat="@mipmap/credito_foreground"/>
                        <TextView android:textSize="8pt"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:id="@+id/tvCreditoLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:text="Tarjeta de Crédito:"/>
                        <TextView android:textSize="9pt"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:id="@+id/cantCredito"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="0"/>
                    </LinearLayout>
                    <LinearLayout android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="20">
                        <Button android:textSize="4pt"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:id="@+id/btnDetalleCredito"
                            android:background="@drawable/custom_button_rounded_green"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Consultar"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView android:textSize="8pt" android:textStyle="bold"
                android:textColor="@color/white" android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/tvTotalValores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Totales: 0"/>
            <TextView android:textSize="8pt"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:text="Metodo Cobro"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="5dp">
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp">
                        <TextView android:textSize="9pt"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:text="EN CAJA:"/>
                    </LinearLayout>
                    <TextView android:textSize="10pt"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:id="@+id/tvTotalMetodoCobro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="0"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">
                    <TextView android:textSize="8pt"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cant. Clientes"/>
                    <TextView android:textSize="8pt"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:id="@+id/tvCanClientes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">
                    <TextView android:textSize="8pt"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cant. Cuotas"/>
                    <TextView android:textSize="8pt"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:id="@+id/tvCanCuotas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"/>
                </LinearLayout>
            </LinearLayout>
            <Button android:textColor="@color/white"
                android:id="@+id/btnVerDetalle"
                android:background="@color/blackButton"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Detalles"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>