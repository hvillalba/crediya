                    <TextView android:textSize="7pt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Nro. Documento"/>
                    <TextView android:textSize="8pt" android:textColor="@color/blackButton" android:id="@+id/tvCi" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="5.480.104"/>
                    <TextView android:textSize="7pt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Importe"/>
                    <TextView android:textSize="8pt" android:textColor="@color/blackButton" android:id="@+id/tvImporte" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Gs. 50.000"/>
                    <TextView android:textSize="7pt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Cuota "/>
                    <TextView android:textSize="8pt" android:textColor="@color/blackButton" android:id="@+id/tvCuota" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="12" android:layout_weight="60"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:padding="5dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="50">
                <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:textSize="7pt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="pagado"/>
                    <TextView android:textSize="8pt" android:textColor="@color/estadoRojo" android:id="@+id/tvPagado" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="100.000"/>
                    <TextView android:textSize="7pt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="estado"/>
                    <TextView android:textColor="@color/estadoRojo" android:id="@+id/tvEstado" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ESTADO"/>
                    <TextView android:textSize="7pt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="atraso"/>
                    <TextView android:textSize="8pt" android:textColor="@color/blackButton" android:id="@+id/tvAtraso" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="12 dias"/>
                    <TextView android:textSize="7pt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="fecha vencimiento"/>
                    <TextView android:textSize="8pt" android:textColor="@color/blackButton" android:id="@+id/tvFechaOperacion" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="12-03-2019"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>